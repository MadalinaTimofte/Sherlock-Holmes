<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exibitions"
        android:layout_marginTop="29dp"
        android:layout_toLeftOf="@+id/favorites"
        android:src="@drawable/ic_calendar" 
        android:onClick="viewCalendar"/>

    <ImageButton
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/favorites"
        android:src="@drawable/ic_exhibition_map"
        android:onClick="viewMap" />

    <ImageButton
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@+id/exhibitions"
        android:onClick="viewInfo"
        android:src="@drawable/ic_useful_info" />

    <ImageButton
        android:id="@+id/favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/map"
        android:layout_marginRight="62dp"
        android:layout_marginTop="16dp"
        android:onClick="viewFavorites"
        android:src="@drawable/ic_favorites" />

    <ImageButton
        android:id="@+id/exhibitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/map"
        android:layout_alignTop="@+id/info"
        android:layout_marginTop="14dp"
        android:onClick="viewExhibitions"
        android:src="@drawable/ic_exhibitions" />

    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/map"
        android:layout_alignLeft="@+id/favorites"
        android:layout_marginLeft="17dp"
        android:onClick="viewGallery"
        android:src="@drawable/ic_gallery" />

</RelativeLayout>
